@using System.Text.RegularExpressions

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=.8, maximum-scale=5.0, minimum-scale=.5, user-scalable=yes" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Portfolio Dominik Obłoza | Grafik | Designer</title>
    <meta name="description" content="Portfolio Dominik Obłoza | Grafik | Designer" />

    <!-- Social meta -->
    <meta property="og:image:width" content="1024" />
    <meta property="og:image:height" content="536" />
    <meta property="og:title" content="Dominik Obłoza - Portfolio | Grafika komputerowa" />
    <meta property="og:description"
          content="W portfolio znajdziesz moje ostatnie projekty - web design, LOGO, ulotki, UI oraz ilustracje." />
    <meta property="og:url" content="http://bloked.pl" />
    <meta property="og:image" content="http://bloked.pl/og-image.jpg" />

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-16x16.png" />
    <link rel="manifest" href="~/favicon/site.webmanifest" />
    <link rel="mask-icon" href="~/favicon/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/cssLightbox/style.min.css" />
    <link rel="stylesheet" href="~/css/style.min.css" />

    <link rel="preconnect" href="https://code.jquery.com" crossorigin="anonymous">
</head>
<body>
    <div class="custom-control custom-switch m-3">
        <input onchange="changeLanguage(this.value)" checked=@(Language.Culture.ToString() == "en-GB") value=@((Language.Culture.ToString() == "en-GB" ? "/" : "en-GB")) type="checkbox" class="custom-control-input" id="langSwitch">
        <label role="button" class="custom-control-label" for="langSwitch">ENG</label>
    </div>

    <div id="navButton" class="d-flex flex-column justify-content-center">
        <div id="line-one"></div>
        <div id="line-two"></div>
        <div id="line-three" class="clearfix"></div>
    </div>
    <nav class="d-flex  justify-content-center align-items-center">
        <div id="navContainer"
             class="d-flex flex-column flex-md-row justify-content-center justify-content-md-around align-items-center">
            <p id="home" class="currentNavSection">@Language.nav_home</p>
            <p id="info">@Language.nav_info</p>
            <p id="portfolio">@Language.nav_portfolio</p>
            <p id="aboutMe">@Language.nav_aboutMe</p>
            <p id="contact">@Language.nav_contact</p>
        </div>
    </nav>
    @RenderBody()
    <footer class="contact">
        <div id="socials">
            <div id="email" class="d-flex justify-content-center align-items-center">
                <div id="emailIcon"></div>
                <p class="mt-0 ml-3 mb-0">
                    <a href="mailto:kontakt@dominikobloza.pl?subject='Moja strona - wiadomość'">
                        kontakt@dominikobloza.pl
                    </a>
                </p>
            </div>
            <div id="socialDivs" class="d-flex justify-content-center align-items-center">
                <a href="https://www.facebook.com/PeakCreativity"
                   target="_blankt"
                   title="@Language.socials_titles_fb">
                    <div id="fb"></div>
                </a>
                <a href="https://www.instagram.com/Peak.Creativity/"
                   target="_blankt"
                   title="@Language.socials_titles_instagram">
                    <div id="inst" class="ml-3"></div>
                </a>
                <a href="https://www.behance.net/BLOCKED_"
                   target="_blankt"
                   title="@Language.socials_titles_behance">
                    <div id="behance" class="ml-3"></div>
                </a>
            </div>
            <p class="mt-3 mb-0 ml-3 mr-3 pb-2">
                Copyright © DominikObloza 2019 <<span>&#92;</span>> Designed by Me, created by Radosław Kisiel
            </p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="./js/gallery.js"></script>
    <script src="./js/blightbox.js"></script>
    <script src="./js/bmain.js"></script>
</body>

<script>
    function changeLanguage(language){
        window.location = language
    }
</script>
</html>
